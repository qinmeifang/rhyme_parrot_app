/**index.wxss**/
.set{
  font-size: 30rpx;
  margin: 20rpx 5% 0 5%;
  display: flex;
  color: #2c3e50;
  justify-content: space-between;
}
.set-btn{
  width: 30rpx;
  height: 30rpx;
}
.set-item{
  height: 40rpx;
  display: flex;
  justify-content: center; 
  align-items: center;
  cursor: pointer;
}
.mergeChange{
  display: flex;
}
.item-c{
  width: 430rpx;
  margin: 0 20rpx;
  overflow: hidden;
}
.item-c-vulue{
  color: #2c3e50;
  margin-bottom: 20rpx;
  line-height: 40rpx;
  font-size: small;
  display: block;
}
.item-c-name{
  color:#737373;
  font-size: 24rpx;
}
.item-r{
   width: 82rpx;
}
.item-r .tag{
  float: left;
  margin-right: 10rpx;
  margin-bottom: 20rpx;
  padding: 10rpx 8rpx;
  color: #2c3e50;
  line-height: 20rpx;
  border-radius: 10rpx;
  text-align: center;
}
.tips{
  font-size: 26rpx;
  line-height: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
}
image{
  width: 40rpx;
  height: 40rpx;
}
.modal-content{
  padding-top: 0;
}