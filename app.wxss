/**app.wxss**/
@import './component/dialog/dialog.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-size: medium;
  letter-spacing: 2rpx;
} 
.nav{
  width: 100%;
  padding: 20rpx 0;
  position: fixed;
  color: #3caf36;
  background-color: #fff;
  border-bottom:1px solid #ddd;
  top: 0;
  left: 0;
  z-index: 2;
}
.disc{
  float: left; 
  width: 130rpx;
  margin-left: 25rpx;
  color: #3caf36;
  font-size: 28rpx;
}
.nav-top{
  width: 100%;
  display: flex;
  align-items: center;
}

.list-wrap{
  margin-top: 180rpx;
  margin-bottom: 35rpx;
}
.active-color{
  color: #1AAD16;
}
.item{
  height: 150rpx;
  padding: 20rpx 0;
  margin: 0 20rpx;
  border-top: 1px solid #ddd;
}
.item:nth-child(2){
  border-top: 0px solid #ddd;
}
.item:first-child{
  border-top: none;
}
.item>view{
  float: left;
}
.item-l{
  width: 150rpx;
  display: flex;
  align-items: center;
}
.item-l-img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  opacity: 0;
  background-color: #f6f6f6; 
  transition: opacity 1s linear 1s;
}
.place_image{
  opacity: 0.5;
  background-color: #f6f6f6; 
  transition: opacity 1s linear s;
}
.fade_in {
    animation: fadeIn 1s both;
}
.hidden{
  opacity: 0.5;
}
.loaded{
    opacity: 1;
}
.radio{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #ddd;
}
.radio:last-child{
  border: none;
}
.ui-radio{
  transform:scale(.6)
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 25%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 6rpx;
}
.modal-content {
  padding: 50rpx 32rpx;
  font-size: 28rpx;
  line-height: 48rpx;
}
.modal-content-item-wrap{
  width: 100%;
  height: 80rpx;
  margin-bottom: 20rpx;
}
.modal-content-item-wrap-url{
  height: 120rpx;
  margin-bottom: 20rpx;
}
.modal-content-item-name, .modal-content-item-content{
  float: left;
} 
.modal-content-item-content{
  line-height: 48rpx; 
  color:#1AAD16;
}
.modal-content-item{
  text-indent: 68rpx;
}
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}
.btn-confirm {
  width: 100%;
  text-align: center;
  color:#1AAD16;
}

.share{
  margin: 0;
  line-height: 50rpx;
  font-size: small;
}

.shareBtn{
  margin: 0;
  margin-left: 10rpx;
  width: 100rpx;
  height: 40rpx;
  display: flex;
  line-height: 40rpx;
  text-align: center;
  align-items: center;
  color:#1AAD16;
  font-size: 28rpx;
  padding: 0;
  background-color: #fff;
  border: none;
}
.shareBtn image{
  width: 40rpx;
  height: 40rpx;
}
button.shareBtn::after{
    border:none;
}